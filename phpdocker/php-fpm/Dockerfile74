FROM phpdockerio/php74-fpm:latest
WORKDIR "/application"

# Fix debconf warnings upon build
ARG DEBIAN_FRONTEND=noninteractive

COPY 99HttpProxy /etc/apt/apt.conf.d/

RUN export HTTP_PROXY=http://proxy.intr.cortex.cz:3128 \
    && export HTTPS_PROXY=http://proxy.intr.cortex.cz:3128;

# Install selected extensions and other stuff
RUN apt update && apt install -y software-properties-common
RUN HTTP_PROXY=http://proxy.intr.cortex.cz:3128 HTTPS_PROXY=http://proxy.intr.cortex.cz:3128 add-apt-repository ppa:ondrej/php

RUN apt-get update \
    && apt -y install lsb-release apt-transport-https \
    && apt install -y --no-install-recommends \
    php7.4-{bcmath,bz2,intl,gd,mbstring,mysql,zip,pgsql,redis,memcached,xml,soap,http} unzip git \
    && apt clean; rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /usr/share/doc/*

# Install Composer
RUN curl --proxy http://proxy.intr.cortex.cz:3128 -sS https://getcomposer.org/installer |\
    php -- --install-dir=/usr/local/bin --filename=composer

#RUN curl -sS https://getcomposer.org/installer |\
#    php -- --install-dir=/usr/local/bin --filename=composer

# Cleanup
#RUN rm -rf /var/cache/apk/*\
#    && find / -type f -iname \*.apk-new -delete\
#    && rm -rf /var/cache/apk/*

# Make translations directory writtable from web
#RUN chmod 0777 /application/translations/ -R

# Install Yarn
RUN curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | apt-key add -
RUN echo "deb https://dl.yarnpkg.com/debian/ stable main" | tee /etc/apt/sources.list.d/yarn.list
RUN apt-get update && apt-get install yarn -y

