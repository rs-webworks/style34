{% extends '_layout/layout-administration.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="container">

        <h2>{% trans from 'administration' %}dashboard{% endtrans %}</h2>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url('administration-dashboard') }}">{{ eryse.client.name }}</a></li>
                <li class="breadcrumb-item active"
                    aria-current="page">{% trans from 'administration' %}dashboard{% endtrans %}</li>
            </ol>
        </nav>

        <div class="row">

            {# Users #}
            {# ------------------------------------------------------------------------------------------ #}
            <div class="card col-xs-12 col-md-3 m-3">
                <div class="card-body">

                    <h5 class="card-title">
                        <i class="fa fa-fw fa-address-card"></i>
                        {% trans from 'administration' %}profiles{% endtrans %}
                    </h5>
					<hr>

					<div class="list-group">
						<a href="{{ url("administration-profiles-list") }}" class="list-group-item list-group-item-action">
                            <i class="fa fa-fw fa-chevron-right"></i>
							{% trans from 'administration' %}profiles{% endtrans %}
						</a>
						<a href="{{ url("administration-profile-role-list") }}" class="list-group-item list-group-item-action">
                            <i class="fa fa-fw fa-chevron-right"></i>
							{% trans from 'administration' %}roles{% endtrans %}
						</a>
					</div>
                </div>
            </div>

        </div>
    </div>


{% endblock %}
