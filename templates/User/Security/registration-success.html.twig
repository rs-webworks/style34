{% extends '_layout/layout-frontend.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="container">

        <h2>{% trans from 'profile' %}activation-needed{% endtrans %}</h2>
        <hr>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ url('home-index') }}">{{ eryse.client.name }}</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ url('user-registration') }}">{% trans from 'global' %}registration{% endtrans %}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    {% trans from 'user' %}registration-success{% endtrans %}
                </li>
            </ol>
        </nav>

        <div class="row">
            <div class="col col-xs-12">
                <p>{% trans from 'user' %}registration-success-note{% endtrans %}</p>
            </div>
        </div>
    </div>


{% endblock %}
