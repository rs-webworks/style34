<!DOCTYPE html>
<html lang="cs-CZ">
<head>
	{# META Tags #}
	{# --------------------------------------------------------------------------------------------------------------------------------------------------------- #}
	<meta charset="utf-8"/>
	<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
	<meta name="viewport" content="width=device-width, initial-scale=1"/>
	<meta name="description" content=""/>
	{# --------------------------------------------------------------------------------------------------------------------------------------------------------- #}
	{# // META Tags #}

	<title>{% block title %}Home{% endblock %} - EryseClient</title>
	<link rel="canonical" href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}"/>
	<link rel="icon" type="image/x-icon" href="{#{{ asset('favicon.ico') }}#}"/>
	<link rel="icon" sizes="192x192" href="{#{{ asset('bigicon.png') }}#}"/>
	<link rel="manifest" href="{#{{ asset('manifest.json') }}#}"/>

	{# Fonts #}
	<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700,900&amp;subset=latin-ext" rel="stylesheet">

	{# CSS Loading #}
	{# --------------------------------------------------------------------------------------------------------------------------------------------------------- #}
	{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('libraries/@fortawesome/fontawesome-free/css/all.css') }}">
		<link rel="stylesheet" href="{{ asset('css/app.css') }}">
	{% endblock %}
	{# --------------------------------------------------------------------------------------------------------------------------------------------------------- #}
	{# // CSS Loading #}
</head>

<body class="{% block bodyClass %}{% endblock %}">

{% if showHeader is defined %}
	<header>
		<div class="container">
			<img src="{{ asset('images/header.png') }}" alt="" class="bg-img">

			<a id="logo" href="{{ url('home-index') }}">
				<div id="top">STYL<span class="highlight">E34</span></div>
				<div id="bottom">BMW <span class="highlight">E34</span> Enthusiasts</div>
			</a>
		</div>
	</header>
{% endif %}

{% include "_partials/navigation-top-frontend.html.twig" %}

<div class="container" id="flash-messages">

	{% if app.request.hasPreviousSession %}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
	{% endif %}
</div>

{% block body %}{% endblock %}

<footer class="container">
	<p></p>
</footer>

{% block javascripts %}
	<script src="{{ asset('libraries/jquery/dist/jquery.slim.js') }}"></script>
	<script src="{{ asset('libraries/popper.js/dist/umd/popper.min.js') }}"></script>
	<script src="{{ asset('libraries/bootstrap/dist/js/bootstrap.js') }}"></script>
	<script src="{{ asset('js/app.js') }}"></script>
{% endblock %}
</body>